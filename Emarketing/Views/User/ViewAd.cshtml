
@model Emarketing.Models.AdViewModel
@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div>
    <div class="row">
        <div class="col-lg-12 col-md-12" style="height:100px; border:1px solid solid; ">



            <img src="~/Content/img/pexels-quentin-martinez-2147503099-29846783.jpg" style="height:100px; width:100%" />
        </div>

    </div>






    <div class="row" style="margin-bottom:40px">

        <div class="col-lg-2 col-md-2">
            <img src="~/Content/img/150_sleep1_600.gif" class="img img-responsive" style="width:100%; height:100%" />
        </div>

        <div class="col-lg-8 col-md-8">
            <div class="row p-5">
                <div>
                    <h1>@Model.pro_name<small>Product Id: @Model.pro_id</small></h1>

                </div>
                <img src="@Url.Content(@Model.pro_image)" style=" width:700px; height:450px;" />

                <div>
                    <h1>Description</h1>

                    <p>@Model.pro_desc</p>
                    <br />
                </div>
                <table>
                    <tr><td>Price :</td><td> @Model.pro_price</td></tr>
                    <tr><td>Category :</td><td> @Model.cat_name</td></tr>
                    <tr><td>Posted By :</td><td> @Model.u_name <img src="@Url.Content(@Model.u_image)" height="35px" width="35px" /> </td></tr>
                    <tr><td>Contact :</td><td> @Model.u_contact </td></tr>

                    <!---video 5-->
                    <tr>
                        <td colspan="2">

                            @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_fk_user))
                            {


                                @Html.ActionLink("Close this Ad", "DeleteAd", new { id = Model.pro_id }, new { @class = "btn btn-info" })


                            }
                        </td>
                    </tr>


                </table>

                @*@if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">


                            </div>

                        }
                    }*@
            </div>
        </div>


        <div class="col-lg-2 col-md-2">
            <img src="~/Content/img/LOB_val_600.gif" class="img img-responsive" style="width:100%; height:100%" />
        </div>





    </div>


</div>

